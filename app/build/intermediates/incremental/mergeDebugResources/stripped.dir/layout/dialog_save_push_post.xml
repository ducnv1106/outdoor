<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rlRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:background="@drawable/bg_dialog_save_push_post">
        <TextView
            android:textStyle="bold"
            android:text="@string/str_title_confir_exit_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:id="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:textSize="@dimen/_11sdp"
            android:text="@string/msgConfirmExitPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvConfirm"
            android:gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorBlack2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@id/tvConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorBorder"
            android:id="@+id/viewLine1"
            />
        <TextView
            android:textSize="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvSaveDraft"
            android:textColor="@color/colorLoginFB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine1"
            android:gravity="center"
            android:text="@string/str_save_draft"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@id/tvSaveDraft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorBorder"
            android:id="@+id/viewLine2"
            />
        <TextView
            android:textSize="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvDiscardPost"
            android:textColor="@color/colorMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine2"
            android:gravity="center"
            android:text="@string/str_discard_post"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@id/tvDiscardPost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorBorder"
            android:id="@+id/viewLine3"
            />
        <TextView
            android:textSize="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvKeepEditing"
            android:textColor="@color/colorLoginFB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine3"
            android:gravity="center"
            android:text="@string/str_keep_editing"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>