<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                       
                                                                                                             
           
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp" android:tag="layout/item_reply_comment_hot_news_0">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorViewLine"
            android:id="@+id/viewLine"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine">

            <brite.outdoor.ui.widgets.CustomImageButton
                android:id="@+id/imgAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_img_item"
                android:scaleType="centerCrop"
                android:tag="binding_1"              
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                app:layout_constraintTop_toTopOf="parent">

                <brite.outdoor.ui.widgets.NoPaddingTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:tag="binding_2"                 />

                <brite.outdoor.ui.widgets.NoPaddingTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/_10sdp"
                    android:tag="binding_3"                     />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <brite.outdoor.ui.widgets.ShowMoreTextView
            android:id="@+id/tvContentComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/clAvatar"
            app:layout_constraintTop_toBottomOf="@+id/clAvatar" />

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tvContentComment"
            app:layout_constraintTop_toBottomOf="@+id/tvContentComment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInteractive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvContentComment"
            app:layout_constraintTop_toBottomOf="@+id/imgComment">

            <TextView
                android:id="@+id/tvSending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblSending"
                android:visibility="gone"
                android:textColor="@color/colorDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDateAndReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblReply"
                    android:textColor="@color/colorMain"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/tvDelete"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_20sdp"
                    android:text="@string/lblDelete"
                    android:textColor="@color/colorMain"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         