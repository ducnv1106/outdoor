<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                       
                                                                                            
                 
                                
                                       
                                          
           

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardElevation="@dimen/_1sdp" android:tag="layout/item_frequent_question_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewLine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cl_tab_home"
                android:paddingTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/viewLine">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guiH004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.032" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guiH996"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.968" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guiH004"
                    app:layout_constraintTop_toTopOf="parent">

                    <brite.outdoor.ui.widgets.CustomImageButton
                        android:id="@+id/imgAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_img_item"
                        android:scaleType="centerCrop"
                        android:tag="binding_1"              
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                                           
                                                                          />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                        app:layout_constraintTop_toTopOf="parent">

                        <brite.outdoor.ui.widgets.NoPaddingTextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:tag="binding_2"                 />

                        <brite.outdoor.ui.widgets.NoPaddingTextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/grey_600"
                            android:textSize="@dimen/_10sdp"
                            android:tag="binding_3"                    />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/bg_item_frequent_question"
                    android:id="@+id/clContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/clAvatar">

                    <TextView
                        android:id="@+id/tvContent"
                        android:padding="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_4"       />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/tvContent"
                        android:background="@color/grey_300"
                        android:id="@+id/viewLine1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <LinearLayout
                        android:id="@+id/layout_bottom"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@id/viewLine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:id="@+id/layoutLike"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:ignore="UseCompoundDrawables">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgLike"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_happy_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvLike"
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:text="@string/lblLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutComment"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:ignore="UseCompoundDrawables">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgComment"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bulb_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:text="@string/lblCommentVn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutSave"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:tag="binding_5"                                         
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgSaved"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvSave"
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:text="@string/lblSaved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutEdit"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgEdit"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_edit_question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvEdit"
                                android:textColor="@color/colorMain2"
                                android:textSize="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:text="@string/lblEditQuestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutTrash"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:tag="binding_6"                                         
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgTrash"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_trash_question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvTrash"
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/_11sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:text="@string/lblDeleteQuestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        app:layout_constraintTop_toBottomOf="@id/layout_bottom"
                        android:background="@color/grey_300"
                        android:id="@+id/viewLine2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         