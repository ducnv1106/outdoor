<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="brite.outdoor.data.api_entities.response.ResponseAnswerQuestion.AnswerQuestion" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <brite.outdoor.ui.widgets.CustomImageButton
                android:id="@+id/imgAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_img_item"
                android:scaleType="centerCrop"
                app:avatar_user="@{item.avatar_user}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                app:layout_constraintTop_toTopOf="parent">

                <brite.outdoor.ui.widgets.NoPaddingTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:text="@{item.user_name_created}"/>

                <brite.outdoor.ui.widgets.NoPaddingTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/_10sdp"
                    app:setTimePostNews="@{item.created_time}" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvContentComment"
            android:paddingStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_5sdp"
            android:textColor="@color/black"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/clAvatar"
            app:layout_constraintTop_toBottomOf="@+id/clAvatar" />
        <TextView
            android:id="@+id/btnSeeTextMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/tvContentComment"
            app:layout_constraintStart_toStartOf="@id/tvContentComment"
            android:maxLines="4"
            android:text="@string/lblSeeMore"
            app:layout_constraintBottom_toBottomOf="@id/tvContentComment" />

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tvContentComment"
            app:layout_constraintTop_toBottomOf="@+id/btnSeeTextMore" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInteractive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgComment">

            <TextView
                android:id="@+id/tvSending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblSending"
                android:visibility="gone"
                android:textColor="@color/colorDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDateAndReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblReply"
                    android:textColor="@color/colorMain"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/tvDelete"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_20sdp"
                    android:text="@string/lblDelete"
                    android:textColor="@color/colorMain"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcItemComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvContentComment"
            app:layout_constraintTop_toBottomOf="@+id/clInteractive" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/rcItemComment"
            app:layout_constraintTop_toBottomOf="@+id/rcItemComment">

            <ImageView
                android:id="@+id/imgIcArrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvSeeMore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvSeeMore" />

            <TextView
                android:id="@+id/tvSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="@string/lblSeeMore"
                android:textColor="@color/colorDate"
                app:layout_constraintStart_toEndOf="@+id/imgIcArrowDown"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorViewLine"
            app:layout_constraintTop_toBottomOf="@+id/btnSeeMore" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>