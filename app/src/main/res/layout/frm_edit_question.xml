<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mViewModel"
            type="brite.outdoor.viewmodel.EditQuestionViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/grey_100"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopNav"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:elevation="6dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartTopNavButton"
                app:layout_constraintGuide_percent="0.032"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glEndTopNavButton"
                app:layout_constraintGuide_percent="0.968"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glEndToolBarContent"
                app:layout_constraintGuide_percent="0.968"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <brite.outdoor.ui.widgets.CustomImageButton
                android:id="@+id/imgBack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/glStartTopNavButton"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_question" />

            <brite.outdoor.utils.AutoShrinkTextView
                android:id="@+id/tvTopNavTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_edit_question"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <brite.outdoor.utils.AutoShrinkTextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/glEndToolBarContent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvOver"
                android:text="@string/lblOver"
                android:textColor="@color/colorMain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStartContent"
            app:layout_constraintGuide_percent="0.032"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glEndContent"
            app:layout_constraintGuide_percent="0.968"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <EditText
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/edtContent"
            android:textSize="@dimen/_11sdp"
            android:text="@={mViewModel.contentPost}"
            app:limitLineEdt="@{mViewModel.contentPost}"
            android:background="@drawable/bg_edittext_edit_question"
            android:maxLength="250"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:gravity="top|start"
            android:inputType="textNoSuggestions|textMultiLine"
            android:privateImeOptions="nm"
            app:layout_constraintTop_toBottomOf="@id/clTopNav"
            app:layout_constraintEnd_toEndOf="@id/glEndContent"
            app:layout_constraintStart_toStartOf="@id/glStartContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:lengthText="@{mViewModel.lengthContent}"
            app:layout_constraintEnd_toEndOf="@id/glEndContent"
            app:layout_constraintTop_toBottomOf="@id/edtContent"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack2"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
