<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rlRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:background="@drawable/bg_dialog_save_push_post">
        <RelativeLayout
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:id="@+id/title"
            android:background="@drawable/bg_title_dialog_warning_push_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_warning"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_warning"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <brite.outdoor.ui.widgets.NoPaddingTextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack2"
            android:id="@+id/tvNumberPhoto"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            />
        <brite.outdoor.ui.widgets.NoPaddingTextView
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorBlack2"
            android:id="@+id/tvNumberVideo"
            app:layout_constraintTop_toBottomOf="@+id/tvNumberPhoto"
            android:gravity="center"
            />
        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/layoutResult"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvNumberVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <brite.outdoor.ui.widgets.NoPaddingTextView
                android:text="@string/str_total_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack2"
                android:id="@+id/tvResult"
                app:layout_constraintTop_toBottomOf="@+id/tvNumberVideo"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <brite.outdoor.ui.widgets.NoPaddingTextView
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorMain"
                android:id="@+id/numberResult"
                app:layout_constraintTop_toBottomOf="@+id/tvNumberVideo"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorBlack"
            android:id="@+id/tvMaximumPhotoVideo"
            android:text="@string/str_total_media_selected"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/layoutResult"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_follow"
            android:id="@+id/btnClose"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tvMaximumPhotoVideo"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/lbClose"/>
        <View
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/viewFooter"
            app:layout_constraintTop_toBottomOf="@id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>