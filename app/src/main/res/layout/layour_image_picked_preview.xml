<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMain"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:background="@color/grey_600"
            android:src="@drawable/ic_no_images"
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            <brite.outdoor.ui.widgets.ProgressView
                android:id="@+id/progressMain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                android:src="@drawable/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:frameCount="12"
                app:duration="800"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDeleteMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/clMain"
            app:layout_constraintTop_toTopOf="@id/clMain"
            app:srcCompat="@drawable/ic_pick_image_delete" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBgIconVideoMain"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/clMain"
            app:layout_constraintEnd_toEndOf="@id/clMain"
            app:layout_constraintBottom_toBottomOf="@+id/clMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <View
                android:background="@color/colorBlack3"
                app:layout_constraintTop_toTopOf="@+id/imgVideoMain"
                app:layout_constraintBottom_toBottomOf="@+id/imgVideoMain"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgVideoMain"
                app:srcCompat="@drawable/ic_baseline_videocam_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/clMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clMain">
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                android:id="@+id/clImgChild1"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@color/grey_600"
                    android:id="@+id/imgChild1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_no_images"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread_inside" />
                <brite.outdoor.ui.widgets.ProgressView
                    android:id="@+id/progressChild1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"
                    android:src="@drawable/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:frameCount="12"
                    app:duration="800"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clImgChild2"
                app:layout_constraintBottom_toTopOf="@+id/clImgChild3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clImgChild1"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@color/grey_600"
                    android:src="@drawable/ic_no_images"
                    android:id="@+id/imgChild2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <brite.outdoor.ui.widgets.ProgressView
                    android:id="@+id/progressChild2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"
                    android:src="@drawable/progress_animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:frameCount="12"
                    app:duration="800"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clImgChild3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@color/grey_600"
                    android:src="@drawable/ic_no_images"
                    android:id="@+id/imgChild3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
                <brite.outdoor.ui.widgets.ProgressView
                    android:id="@+id/progressChild3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"
                    android:src="@drawable/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:frameCount="12"
                    app:duration="800"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgDeleteChild1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/clImgChild1"
                app:layout_constraintTop_toTopOf="@id/clImgChild1"
                app:srcCompat="@drawable/ic_pick_image_delete" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgDeleteChild2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/clImgChild2"
                app:layout_constraintTop_toTopOf="@id/clImgChild2"
                app:srcCompat="@drawable/ic_pick_image_delete" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgDeleteChild3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/clImgChild3"
                app:layout_constraintTop_toTopOf="@id/clImgChild3"
                app:srcCompat="@drawable/ic_pick_image_delete" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBgIconVideo1"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/clImgChild1"
                app:layout_constraintEnd_toEndOf="@id/clImgChild1"
                app:layout_constraintBottom_toBottomOf="@+id/clImgChild1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/colorBlack3"
                    app:layout_constraintTop_toTopOf="@+id/imgVideo1"
                    app:layout_constraintBottom_toBottomOf="@+id/imgVideo1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgVideo1"
                    app:srcCompat="@drawable/ic_baseline_videocam_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBgIconVideo2"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/clImgChild2"
                app:layout_constraintEnd_toEndOf="@id/clImgChild2"
                app:layout_constraintBottom_toBottomOf="@+id/clImgChild2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/colorBlack3"
                    app:layout_constraintTop_toTopOf="@+id/imgVideo2"
                    app:layout_constraintBottom_toBottomOf="@+id/imgVideo2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgVideo2"
                    app:srcCompat="@drawable/ic_baseline_videocam_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBgIconVideo3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/clImgChild3"
                app:layout_constraintEnd_toEndOf="@id/clImgChild3"
                app:layout_constraintBottom_toBottomOf="@+id/clImgChild3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/colorBlack3"
                    app:layout_constraintTop_toTopOf="@+id/imgVideo3"
                    app:layout_constraintBottom_toBottomOf="@+id/imgVideo3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgVideo3"
                    app:srcCompat="@drawable/ic_baseline_videocam_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFourPlus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="4+"
                android:textColor="#FB8C00"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clImgChild2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>