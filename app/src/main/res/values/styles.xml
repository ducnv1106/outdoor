<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splashScreenTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
<!--        <item name="android:windowBackground">@drawable/splash</item>-->
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="dialogWithoutBox">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Dark" parent="splashScreenTheme">
        <item name="colorSurface">@color/design_dark_default_color_surface</item>
        <item name="colorOnSurface">@color/design_dark_default_color_on_surface</item>
        <item name="colorError">@color/design_dark_default_color_error</item>
        <item name="colorOnError">@color/design_dark_default_color_on_error</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogCommentStyle" parent="Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="dialogNotice">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="dialogReport">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="fontSemiBold">
        <item name="fontFamily">@font/semi_bold</item>
    </style>

    <style name="fontSegoBold">
        <item name="fontFamily">@font/sego_bold</item>
    </style>

    <style name="collapsingToolbarLayoutTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/sego_bold</item>
        <item name="android:textColor">@color/colorBlack2</item>
    </style>

    <style name="exToolbarLayoutTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="fontFamily">@font/sego_bold</item>
        <item name="android:textColor">@color/colorBlack2</item>
    </style>

    <style name="stMyPageH1">
        <item name="fontFamily">@font/sego_bold</item>
        <item name="android:textColor">@color/colorBlack2</item>
    </style>

    <style name="stDefault">
        <item name="fontFamily">@null</item>
    </style>

    //Custom_Bootom_Sheet
    <style name="CustomBottomSheetDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="fontFamily">@font/sego_bold</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CustomBottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/to_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottom</item>
<!--        <item name="android:background">@drawable/custom_bottomsheet</item>-->
    </style>
    <style name="TabLayout" parent="Widget.Design.TabLayout">
<!--        <item name="tabIndicatorColor">@color/colorWhite</item>-->
        <item name="tabSelectedTextColor">@color/colorMain</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutQuestion" parent="Widget.Design.TabLayout">
        <!--        <item name="tabIndicatorColor">@color/colorWhite</item>-->
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabTextColor">@color/colorMain2</item>
        <item name="tabTextAppearance">@style/TabLayoutTextQuestion</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutTextQuestion" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="CustomMediaButton.Play" parent="ExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_video</item>
    </style>
    <style name="CustomMediaButton.Pause" parent="ExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause_video</item>
    </style>
    <style name="CustomMediaButton.Rewind" parent="ExoMediaButton.Rewind">
        <item name="android:src">@drawable/ic_rewind</item>
    </style>
    <style name="CustomMediaFastForward" parent="ExoMediaButton.FastForward">
        <item name="android:src">@drawable/ic_fastforward</item>
    </style>

    // animation show dialog
    <style name="ShowDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/to_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottom</item>
    </style>

    <style name="AddImageStyle" parent="Fullscreen">
        <item name="android:windowAnimationStyle">@style/ShowDialogAnimation</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
</resources>