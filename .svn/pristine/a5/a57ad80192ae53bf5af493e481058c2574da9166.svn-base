<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textViewStyle">@style/fontSemiBold</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Splash" parent="Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/colorMain2</item>
    </style>

    <style name="ButtonPickImage">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CameraTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textViewStyle">@style/fontSemiBold</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>