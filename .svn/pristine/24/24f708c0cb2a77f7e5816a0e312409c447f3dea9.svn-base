<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nsvMyBookmark"
    tools:context=".ui.fragments.my_page.FrmMyBookMart">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/flRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <brite.outdoor.ui.widgets.CustomShimmerPlaceholderBookMart
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <brite.outdoor.ui.widgets.CustomShimmerPlaceholderBookMart
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBookMark"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        android:id="@+id/ltRetry"
        android:visibility="gone"
        layout="@layout/layout_api_load_failed"/>
</FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>